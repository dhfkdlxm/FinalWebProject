<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member.MemberDAO">
	<resultMap type="memberVO" id="memberMap">
		<result column="user_id" property="userId" />
		<result column="user_pwd" property="userPwd" />
		<result column="user_resistnum" property="userResistNum" />
		<result column="user_name" property="userName" />
		<result column="user_post" property="userPost" />
		<result column="user_addr" property="userAddr" />
		<result column="user_addr2" property="userAddr2" />
		<result column="user_tel" property="userTel" />
		<result column="user_email" property="userEmail" />
		<result column="user_regdate" property="userRegDate" />
		<result column="emp_id" property="empId" />
		<result column="user_auth" property="userAuth" />
	</resultMap>
	<select id="login" parameterType="memberVO"	resultType="memberVO">
		select id, password
		from t_member1
		where id=#{id} and password=#{password}
	</select>
	<insert id="registMember" parameterType="memberVO">
		insert into t_user_table(user_id, user_pwd, user_resistnum, user_name, user_post, user_addr, user_addr2
		,user_tel, user_email, user_regdate, enabled) values(#{userId}, #{userPwd}, #{userResistNum}, 
		#{userName}, #{userPost}, #{userAddr}, #{userAddr2}, #{userTel}, #{userEmail}, sysdate, 1)
	</insert>



</mapper>